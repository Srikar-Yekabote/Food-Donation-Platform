<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Register | Food Donation Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #0d1b2a;
        }
    </style>
</head>
<body >
    <%- include("partials/navbar") %>
<div class="flex items-center justify-center min-h-screen text-[#e0e1dd]">
    <main class="w-full flex items-center justify-center">
        <!-- Reduced height with max-w-sm and compact spacing -->
        <div class="bg-[#1b263b] p-6 rounded-2xl shadow-lg w-full max-w-sm space-y-3">
            <h2 class="text-xl font-semibold text-center">Register</h2>

            <% if (typeof error !== "undefined") { %>
                <div class="bg-red-100 text-red-700 px-3 py-1 rounded-md text-sm text-center">
                    <%= error %>
                </div>
            <% } %>

            <form action="/register" method="POST" class="space-y-3">
                <div>
                    <label class="block text-sm mb-1">Full Name</label>
                    <input type="text" name="name" placeholder="Full Name"
                        class="w-full px-3 py-2 border border-[#415a77] rounded-md bg-[#0d1b2a] text-[#e0e1dd] placeholder-[#778da9] focus:ring-2 focus:ring-[#778da9]" required />
                </div>

                <div>
                    <label class="block text-sm mb-1">Email</label>
                    <input type="email" name="email" placeholder="you@example.com"
                        class="w-full px-3 py-2 border border-[#415a77] rounded-md bg-[#0d1b2a] text-[#e0e1dd] placeholder-[#778da9] focus:ring-2 focus:ring-[#778da9]" required />
                </div>

                <div>
                    <label class="block text-sm mb-1">Password</label>
                    <input type="password" name="password" placeholder="Password"
                        class="w-full px-3 py-2 border border-[#415a77] rounded-md bg-[#0d1b2a] text-[#e0e1dd] placeholder-[#778da9] focus:ring-2 focus:ring-[#778da9]" required />
                </div>

                <div>
                    <label class="block text-sm mb-1">Confirm Password</label>
                    <input type="password" name="confirmPassword" placeholder="Confirm Password"
                        class="w-full px-3 py-2 border border-[#415a77] rounded-md bg-[#0d1b2a] text-[#e0e1dd] placeholder-[#778da9] focus:ring-2 focus:ring-[#778da9]" required />
                </div>

                <div>
                    <label class="block text-sm mb-1">Role</label>
                    <select name="role"
                        class="w-full px-3 py-2 border border-[#415a77] rounded-md bg-[#0d1b2a] text-[#e0e1dd] focus:ring-2 focus:ring-[#778da9]">
                        <option value="donor">Donor</option>
                        <option value="volunteer">Volunteer</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm mb-1">Phone Number</label>
                    <input type="text" name="phone" placeholder="Phone Number"
                        class="w-full px-3 py-2 border border-[#415a77] rounded-md bg-[#0d1b2a] text-[#e0e1dd] placeholder-[#778da9] focus:ring-2 focus:ring-[#778da9]" required />
                </div>

                <button type="submit"
                    class="w-full bg-[#415a77] hover:bg-[#778da9] text-white font-medium py-2 rounded-md transition">
                    Register
                </button>
            </form>

            <p class="text-center text-sm text-[#778da9]">
                Already have an account?
                <a href="/login" class="text-[#e0e1dd] hover:underline font-medium">Login here</a>
            </p>
        </div>
    </main>
</div>
    <script>
        const form = document.querySelector("form");
        form.addEventListener("submit", function (e) {
            const pw = form.password.value;
            const cpw = form.confirmPassword.value;
            if (pw !== cpw) {
                e.preventDefault();
                alert("Passwords do not match!");
            }
        });
    </script>
</body>
</html>
